<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="daraunited.com.fisherinnovapps.TwoFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nestedScrollViewc">
        <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:theme="@style/AppThemeDARA">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_two_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/thumbnailtwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/spika_demo_news"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnailtwo"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:paddingTop="@dimen/album_title_padding"
                        android:textColor="@color/album_title"
                        android:textSize="@dimen/album_title"
                        android:text="Plate-forme d'échange... "/>
                    <TextView
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:text="Echanger avec tous les autres utilisateurs du logiciel afin de trouvé des solutions aux contraintes auxquelles vous faites face dans votre élevage…"
                        android:paddingBottom="@dimen/songs_count_padding_bottom"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:textSize="@dimen/songs_count"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_one_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:enabled="false"
                android:visibility="gone"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/thumbnailb"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"

                        android:src="@drawable/spika_demo_news"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/countb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spikastrb"
                        android:paddingBottom="@dimen/songs_count_padding_bottom"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:textSize="@dimen/songs_count"
                        android:enabled="false"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/titleb"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entrez le nom de votre groupe...."
                        android:ems="10"
                        android:enabled="false"
                        android:id="@+id/TxMOR"
                        android:layout_below="@+id/thumbnailb"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/titleb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:paddingTop="@dimen/album_title_padding"
                        android:enabled="false"
                        android:textColor="@color/album_title"
                        android:textSize="@dimen/album_title"
                        android:text="Groupe d’échange privé"
                        android:layout_below="@+id/TxMOR"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_one_bc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/thumbnailbc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_help_outline_black_48dp"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/titlebc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnailbc"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:paddingTop="@dimen/album_title_padding"
                        android:textColor="@color/album_title"
                        android:textSize="@dimen/album_title"
                        android:text="Aide..."/>
                    <TextView
                        android:id="@+id/countbc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titlebc"
                        android:text="@string/spikastrbc"
                        android:paddingBottom="@dimen/songs_count_padding_bottom"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:textSize="@dimen/songs_count"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout >
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
